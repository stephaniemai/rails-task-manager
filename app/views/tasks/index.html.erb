<div class="container">
  <% @tasks.each do |t| %>
    <p><span><%= t.completed == false ? "[ ]" : "[x]"  %></span> <%= link_to t.title, task_path(t) %>
    <%= link_to " - edit", edit_path(t)  %>
    <%= link_to " - delete", task_path(t), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %></p>
  <p><%= link_to "Add a new task", new_path %></p>
</div>
