<h2><%= @task.title %></h2>
<div class="container">
  <div class = "details"><%= @task.details %></div>
  <div class="task"><%= @task.completed == true ? "[x] This task is completed" : "[ ] This task is not completed yet" %></div>
  <%= link_to " - edit", edit_path(@task)  %>
    <%= link_to " - delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
  <p><%= link_to "Back to list", tasks_path  %></p>
</div>
